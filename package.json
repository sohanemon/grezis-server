{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "Node Express Typescript Starter",
  "author": "SohanEmon <sohanemon@outlook.com>",
  "license": "MIT",
  "private": false,
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "nodemon",
    "lint": "npx eslint src",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"{*.js,!(node*)**/*.ts}\"",
    "format:write": "prettier --write \"{*.js,!(node*)**/*.ts}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.2.0",
    "husky": "^8.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "prettier": "3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
